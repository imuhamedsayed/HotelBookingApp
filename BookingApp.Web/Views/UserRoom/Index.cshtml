@model List<BookingSystem.BLL.ViewModels.UserRooms>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<table class="table table-striped table-hover text-center">

    <thead class="thead-dark">
        <tr>
            <th class="text-center">Branch Name</th>
            <th class="text-center">Room Type</th>
            <th class="text-center">User Name</th>
            <th class="text-center">NO Of Nights</th>
            <th class="text-center">Price / Night</th>
            <th class="text-center">Total Price</th>
            <th class="text-center">Discount</th>
            <th class="text-center">Action</th>
          
        </tr>
    </thead>
    <tbody>



        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Room.Branch.Name</td>
            <td>@item.Room.Type.Type</td>
            <td>@item.UserName</td>
            <td>@item.NightNo</td>
            <td>@item.Room.Type.PricePerNight</td>
            <td>@item.TotalPrice</td>
            @if (item.TotalPrice < 1000)
            {
                <td>95%</td>
            }
            else
            {
                <td>0%</td>
            }
            <td>

                <a asp-action="CancelBooking" asp-controller="UserRoom" asp-route-id="@item.Id" class="btn btn-danger">Cancel</a>
            </td>
        </tr>
        }

    </tbody>
</table>

