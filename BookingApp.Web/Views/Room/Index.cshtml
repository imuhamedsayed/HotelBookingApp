@model List<BookingSystem.BLL.ViewModels.Room>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="branch-container" style="padding:2% 0;background-color:#EEE">
    <div class="container">
        <div class="row" style="text-align:center">
            <div class="col-lg-12">
                <div class="headertitle" style="text-align:center">
                    <h3 class="h3head" style="color:orange">Our Rooms</h3>
                    <p class="phead">
                        It’s all in the details!
                    </p>
                </div>
            </div>
            <br />
           
            @foreach (var i in Model)
            {
                <div class="col-md-3">
                    <div class="card">
                        <img class="card-img-top" src="~/images/room.jpg" alt="Card image cap">
                        <div class="card-body" style="text-align:center">
                            <h5 class="card-title">@i.Name</h5>
                            <p class="card-text">@i.Type.PricePerNight <span>EGP/Night</span></p>
                            <a asp-action="ShowDetails" asp-controller="Room" asp-route-id="@i.Id" class="btn btn-primary" style="background-color:orange;color:#fff">Details</a>
                        </div>
                    </div>
                </div>
            }
            
       </div>
        </div>
    </div>
